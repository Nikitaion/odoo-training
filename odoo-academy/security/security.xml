<data noupdate="1">
    <record id="academy_manager" model="res.groups">
        <field name="name">Odoo Manager</field>
    </record>

    <record id="can_see_only_is_active" model="ir.rule">
            <field name="name">You can see course only if course is Active</field>
            <field name="model_id" ref="model_academy_course"/>
            <field name="domain_force">[('active', '=', False)]</field>
    </record>

    <record id="only_manager_can_create" model="ir.rule">
            <field name="name">Only manager can do all things</field>
            <field name="model_id" ref="model_academy_course"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('odoo-academy.academy_manager'))]"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_read" eval="1"/>
    </record>

    <record id="rule" model="ir.rule">
            <field name="name">rule</field>
            <field name="model_id" ref="model_academy_course"/>
            <field name="domain_force">[('active', '=', True)] if.user.has_group('academy_manager') else [(1, '=', 1)]</field>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_read" eval="1"/>
    </record>
</data>